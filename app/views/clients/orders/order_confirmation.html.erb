<div class="container mt-5">
  <h1 class="text-center">Order Successful!</h1>
  <p class="text-center">Thank you for your purchase!</p>
  
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Order Details</h5>
    </div>
    <div class="card-body">
      <p><strong>Order ID:</strong> <%= @order.id %></p>
      <p><strong>Order Date:</strong> <%= @order.created_at.strftime("%d %b, %Y") %></p>
      
      <h6>Invoice Details</h6>
      <table class="table">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= number_to_currency(item.unit_price) %></td>
              <td><%= item.quantity %></td>
              <td><%= number_to_currency(item.unit_price * item.quantity) %></td>
            </tr>
          <% end %>
          <tr>
            <td colspan="3"><strong>Order Total</strong></td>
            <td><strong><%= number_to_currency(@order.total_price) %></strong></td>
          </tr>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-between">
        <%= link_to 'Back to Home', clients_root_path, class: 'btn btn-primary' %>
        <%= link_to 'Generate Invoice', generate_invoice_clients_order_path(@order), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
